int find(char *n, char *m)  
{
	cout << "enter finding string\n";
	cin >> n;
	cout << "enter full string\n";
	cin >> m;
  cout << "enter new string\n";
	cin >> t;
	for (int i=0; m[i]; i++)
	{
		for (int j=0; n[j]; j++)
		{
			if (!n[i])
      n[i]=t;
			if (m[i+j]!=n[j]) break;
		}
	}
	return 0;
}
